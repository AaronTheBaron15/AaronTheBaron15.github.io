<MainPage>
    name: 'main_page'
    RelativeLayout:
        canvas.before:
            Color:
                rgba: 5/255.0, 47/255.0, 61/255.0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        canvas:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                size: self.width/1.30, self.height
                pos: self.center_x - (self.width/1.30) / 2, 0     
            Line:
                width: 2
                rectangle: self.center_x - (self.width/1.30) / 2, 0, self.width/1.30, self.height
        ActionBar:
            pos_hint: {'top':1}
            background_image: ''
            background_color: 179/255.0, 179/255.0, 179/255.0, 1
            ActionView:
                ActionPrevious:
                    with_previous: False  
                    app_icon: ''
                    size_hint_x: None
                    markup: True
                ActionOverflow:
                ActionButton:
                    text: 'Home'
                    on_release: app.root.current = 'main_page'
                    color: 0, 0, 0, 1
                ActionButton:
                    text: 'Stream'
                    on_release: app.root.current = 'PlayScreen'
                    color: 0, 0, 0, 1
                ActionButton:
                    text: 'Library'
                    on_release: app.root.current = 'Album'
                    color: 0, 0, 0, 1
                ActionButton:
                    text: 'Upload'
                    color: 0, 0, 0, 1
				ActionButton:
					text: 'Sign In'
					on_release: app.root.current = 'LoginWindow'
