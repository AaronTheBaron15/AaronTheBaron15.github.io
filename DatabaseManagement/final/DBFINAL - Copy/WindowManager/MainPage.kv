<MainPage>
    id: Home
    name: 'main_page'

    RelativeLayout:
        canvas.before:
            Color:
                rgba: 5/255.0, 47/255.0, 61/255.0, 1
            Rectangle:
                size: self.size
                pos: self.pos
        canvas:
            Color:
                rgba: 0,0,0,1
            Rectangle:
                size: self.width/1.30, self.height
                pos: self.center_x - (self.width/1.30) / 2, 0     
            Line:
                width: 2
                rectangle: self.center_x - (self.width/1.30) / 2, 0, self.width/1.30, self.height
        ActionBar:
            pos_hint: {'top':1}
            background_image: ''
            background_color: 179/255.0, 179/255.0, 179/255.0, 1
            ActionView:
